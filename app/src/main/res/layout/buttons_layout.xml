<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/buttonAC"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_corners"
            android:onClick="borrar"
            android:text="CA"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonC"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"

            android:background="@drawable/rounded_corners"
            android:onClick="borrar"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonPorc"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_corners"
            android:onClick="cambiarOperador"
            android:text="%"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonDiv"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_corners"
            android:onClick="cambiarOperador"
            android:text="รท"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button7"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#2AA89595"
            android:onClick="seleccionarNumero"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button8"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#2AA89595"
            android:onClick="seleccionarNumero"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button9"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#2AA89595"
            android:onClick="seleccionarNumero"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonMult"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_corners"
            android:onClick="cambiarOperador"
            android:text="X"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button4"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#2AA89595"
            android:onClick="seleccionarNumero"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button5"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#2AA89595"
            android:onClick="seleccionarNumero"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button6"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#2AA89595"
            android:onClick="seleccionarNumero"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonRest"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_corners"
            android:onClick="cambiarOperador"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button1"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#2AA89595"
            android:onClick="seleccionarNumero"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button2"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"

            android:backgroundTint="#2AA89595"
            android:onClick="seleccionarNumero"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button3"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#2AA89595"
            android:onClick="seleccionarNumero"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonSuma"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_corners"
            android:onClick="cambiarOperador"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button0"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="2"
            android:layout_margin="3dp"
            android:backgroundTint="#2AA89595"
            android:onClick="seleccionarNumero"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonPunt"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#16009688"
            android:onClick="seleccionarNumero"
            android:text="."
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonIgua"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_corners"
            android:onClick="igual"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </GridLayout>


</LinearLayout>